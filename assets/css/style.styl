//------->>>>cores<<<<------
branco    = #FFFFFF
bgCollor  = #f9f9f9
cinzaCL   = #d8d5d5
cinzaMd   = #a09898
verdeCl   = #1497ad
verdeMd   = #078196
azulEs    = #084b8d
preto     = #000000
sucesso   = #22d48b
atencao   = #fbd664
error     = #f97878


//------->>>>font-size<<<<------
font-xxs  = 8px
font-xs   = 10px
font-s    = 12px
font-m    = 15px
font-l    = 20px
font-xl   = 30px
font-xxl  = 40px

*
  margin 0
  padding 0


body
  font font-m/1.3 'Open Sans', sans-serif
  color preto
  text-align center


section, footer, header, aside, nav
  display block


a, a:visited
  outline none
  color verdeCl

a:hover
  text-decoration none

.container
  max-width 1148px
  margin auto

/*-------------------------
    The menu
--------------------------*/

nav
  display inline-block
  margin 60px auto 45px
  background-color verdeMd
  box-shadow 0 1px 1px cinzaCL
  border-radius 2px

  a
    display inline-block
    padding  18px 30px
    color branco !important
    font-weight bold
    font-size font-m
    text-decoration none !important
    line-height 1
    text-transform uppercase
    background-color transparent

    -webkit-transition background-color 0.25s
    -moz-transition background-color 0.25s
    transition background-color 0.25s

  a:first-child
    border-radius 2px 0 0 2px


  a:last-child
    border-radius:0 2px 2px 0

nav.painel .painel,
nav.pacientes .pacientes,
nav.medicos .medicos,
nav.convenios .convenios
nav.consultas .consultas
    background-color azulEs

p
  font-size font-l
  font-weight bold
  color cinzaMd

  b
    color branco
    display inline-block
    padding 5px 10px
    background-color cinzaCL
    border-radius 2px
    text-transform uppercase
    font-size font-m

section.pg-home
  margin auto
  div.dados
    margin auto
    max-width 350px

    ul.list-system
      text-align left
      margin-left 30px
      list-style-type none
      font-size font-xl
      font-weight bold
      padding 10px

      span.result
        clear both
        float right


footer
  margin-bottom 0
  height 100px
  text-align center