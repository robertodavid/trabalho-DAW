//------->>>>classes-genericas<<<<------
.pad-xs
  padding 5px
.pad-s
  padding 10px
.pad-m
  padding 15px
.pad-l
  padding 20px
*
  margin 0
  padding 0

.btn
    margin 10
    background-color: verdeCl
    color: azulEs
    font-size: font-m

body
  font font-m/1.3 'Open Sans', sans-serif
  color preto
  text-align center

html
  overflow-y  scroll

section, footer, header, aside, nav
  display block


a, a:visited
  outline none
  color verdeCl

a:hover
  text-decoration none

.container
  max-width 1048px
  margin auto
  background-color bgCollor

.logo
  width 200px
  height 76px
  background-image url("../images/logo.png")
  background-size cover

//------->>>>Menu<<<<--------

nav
  display inline-block
  margin auto
  background-color verdeMd
  box-shadow 0 1px 1px cinzaCL
  border-radius 2px

  a
    display inline-block
    padding  18px 30px
    color branco !important
    font-weight bold
    font-size font-m
    text-decoration none !important
    line-height 1
    text-transform uppercase
    background-color transparent

    -webkit-transition background-color 0.25s
    -moz-transition background-color 0.25s
    transition background-color 0.25s

  a:first-child
    border-radius 2px 0 0 2px


  a:last-child
    border-radius:0 2px 2px 0

nav.home .home,
nav.pacientes .pacientes,
nav.medicos .medicos,
nav.convenios .convenios
nav.consultas .consultas
    background-color azulEs

p
  font-size font-l
  font-weight bold
  color cinzaMd

  b
    color branco
    display inline-block
    padding 5px 10px
    background-color cinzaCL
    border-radius 2px
    text-transform uppercase
    font-size font-m

section.pg-home
  margin auto
  div.dados
    margin auto
    max-width 350px

    ul.list-system
      text-align left
      margin-left 30px
      list-style-type none
      font-size font-xl
      font-weight bold
      padding 10px

      span.result
        clear both
        float right


section.paciente
  margin auto
  div.dados
    margin auto
    max-width 800px

    table
        border: 1px solid black

        th
            background-color: #4CAF50
            color: white

footer
  margin-bottom 0
  height 100px
  text-align center
